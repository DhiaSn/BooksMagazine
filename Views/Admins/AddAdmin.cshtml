@model BooksMagazine.Models.Admin

@{
    ViewData["Title"] = "AddAdmin";
}

    <div class="container">
        <h1>AddAdmin</h1>

        <h4>Admin</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddAdmin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Token" class="control-label"></label>
                        <textarea asp-for="Token" class="form-control" disabled ></textarea>
                        <input asp-for="Token" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create Admin" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
